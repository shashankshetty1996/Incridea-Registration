<!DOCTYPE html>
<html lang="en" ng-app="myApp">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>Incridea 2K18</title>

        <!-- Bootstrap 4 CSS -->
        <link rel="stylesheet" href="css/bootstrap.min.css">

        <!-- Custom CSS -->
        <link rel="stylesheet" href="css/style.css">

        <!-- Material icons -->
        <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

        <!-- Angualr Js -->
        <script src="js/angular.min.js"></script>
        <script src="js/angular-route.min.js"></script>
        <script src="js/angular-cookies.min.js"></script>
    </head>
    <body ng-controller="rootController">
        <nav class="navbar navbar-expand-md bg-dark navbar-dark">
            <div class="container">
                <!-- Brand -->
                <a class="navbar-brand" href="#!dashboard">INCRIDEA</a>

                <!-- Toggler/collapsibe Button -->
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar links -->
                <div class="collapse navbar-collapse" id="collapsibleNavbar">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="#!" ng-hide="login || admin">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#!dashboard" ng-show="login || admin">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#!about">About</a>
                        </li>

                        <!-- Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="navbardrop" data-toggle="dropdown">
                                User Options
                            </a>
                            <div class="dropdown-menu">
                                <div class="dropdown-header">User Options</div>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#!login" ng-hide="login || admin">
                                    <i class="material-icons">input</i>
                                    <span class="align-top">Login</span>
                                </a>
                                <a class="dropdown-item" href="#" ng-show="admin">
                                    <i class="material-icons">recent_actors</i>
                                    <span class="align-top">Register</span>
                                </a>
                                <a class="dropdown-item" href="#!login" ng-show="login || admin" ng-click="logout()">
                                    <i class="material-icons">lock_open</i>
                                    <span class="align-top">Logout</span>
                                </a>
                                <div ng-show="login || admin">
                                    <div class="dropdown-divider"></div>
                                    <div class="dropdown-header">Participant Details</div>
                                    <a class="dropdown-item" href="#!stat">
                                        <i class="material-icons">book</i>
                                        <span class="align-top">Show statistics</span>
                                    </a>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- view for rendering dyanmic UI contains -->
        <ng-view></ng-view>

        <!-- Bootstrap 4 Js -->
        <script src="js/jquery-3.2.1.min.js"></script>
        <script src="js/popper.min.js"></script>
        <script src="js/bootstrap.min.js"></script>

        <!-- Angular files -->
        <script src="js/app.js"></script>

        <!-- Angualar Controllers -->
        <script src="js/controllers/root.controller.js"></script>
        <script src="js/controllers/home.controller.js"></script>
        <script src="js/controllers/about.controller.js"></script>
        <script src="js/controllers/login.controller.js"></script>
        <script src="js/controllers/dashboard.controller.js"></script>
        <script src="js/controllers/stat.controller.js"></script>
        <script src="js/controllers/dashboard/register.controller.js"></script>
        <script src="js/controllers/dashboard/event.controller.js"></script>

        <!-- Angular Services -->
        <script src="js/services/credentials.service.js"></script>
        <script src="js/services/authentication.service.js"></script>
        <script src="js/services/user.service.js"></script>
        <script src="js/services/participants.service.js"></script>
        <script src="js/services/college.service.js"></script>
    </body>
</html>