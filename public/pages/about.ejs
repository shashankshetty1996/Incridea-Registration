<section>
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-xs-12" ng-repeat="dev in developer">
                <div class="card">
                    <img class="card-img-top" height="300" ng-src="{{dev.photo}}" alt="Card image">
                    <div class="card-body">
                        <h4 class="card-title text-center">{{ dev.name }}</h4>
                        <p class="card-text">Mobile number <kbd>{{ dev.mob }}</kbd></p>
                        <a ng-href="{{ dev.link }}" target="_blank" class="btn btn-primary">View my GitHub Account</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>