<section id="loginBody">
    <div class="container">
        <h1 class="display-4 p-3 mb-5">{{ msg }}</h1>

        <div class="row align-content-center justify-content-center">
            <div class="w-50">
                <div id="loginCard" class="card">
                    <div class="card-body">
                        <form method="post" ng-submit="login()">
                            <div class="form-group">
                                <label for="username">Name:</label>
                                <input type="text" class="form-control" ng-model="username" name="username" placeholder="Enter your username here" required>
                            </div>
                            <div class="form-group">
                                <label for="password">Password:</label>
                                <input type="password" class="form-control" ng-model="password" name="password" placeholder="Enter your password here" required>
                            </div>
                            <div class="form-group">
                                <input type="submit" class="btn btn-primary" value="login">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>